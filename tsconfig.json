{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2019",
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["tsconfig.json", "tsconfig-build.json"]
}
